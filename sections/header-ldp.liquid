{% comment %}
    Header
{% endcomment %}
<div class="ldpHeader headerWrapper--overlay">
    <div class="container">
        <div class="headerInner">
            <a href="{{ shop.url }}">
                {%- if section.settings.logo != blank -%}
                <div class="header__heading-logo-wrapper">
                  {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}
                  {%- assign logo_height = section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio -%}
                  {% capture sizes %}(max-width: {{ section.settings.logo_width | times: 2 }}px) 50vw, {{ section.settings.logo_width }}px{% endcapture %}
                  {% capture widths %}{{ section.settings.logo_width }}, {{ section.settings.logo_width | times: 1.5 | round }}, {{ section.settings.logo_width | times: 2 }}{% endcapture %}
                  {{ section.settings.logo | image_url: width: 600 | image_tag:
                    class: 'header__heading-logo motion-reduce',
                    widths: widths,
                    height: logo_height,
                    width: section.settings.logo_width,
                    alt: logo_alt,
                    sizes: sizes,
                    preload: true
                  }}
                </div>
            {%- else -%}
              <h2 class="h2">{{ shop.name }}</h2>
            {%- endif -%}
            </a>
        </div>
    </div>
</div>
{% schema %}
  {
    "name": "LDP Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "t:settings_schema.logo.settings.logo_image.label"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 100,
        "unit": "px",
        "label": "t:settings_schema.logo.settings.logo_width.label"
      }
    ],
    "presets": [
      {
        "name": "LDP Header"
      }
    ]
  }
{% endschema %}